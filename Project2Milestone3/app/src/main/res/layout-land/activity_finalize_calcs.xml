<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/returnButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".finalizeCalcs">

    <TextView
        android:id="@+id/topTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/finalizeInfoTitle"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/Multihit"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topTitle4" />


    <RadioGroup
        android:id="@+id/generationGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:checkedButton="@id/hit1"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topTitle3">

        <RadioButton
            android:id="@+id/hit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="genEdit"
            android:text="@string/hitOne" />

        <RadioButton
            android:id="@+id/hit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="genEdit"
            android:text="@string/hitTwo" />

        <RadioButton
            android:id="@+id/hit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="genEdit"
            android:text="@string/hitThree" />

        <RadioButton
            android:id="@+id/hit4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="genEdit"
            android:text="@string/hitFour" />

        <RadioButton
            android:id="@+id/hit5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="genEdit"
            android:text="@string/hitFive" />


    </RadioGroup>

    <TextView
        android:id="@+id/topTitle6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/weatherTitle"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generationGroup" />

    <RadioGroup
        android:id="@+id/weatherGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:checkedButton="@id/NoWeather"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topTitle6">

        <RadioButton
            android:id="@+id/NoWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weatherNone" />

        <RadioButton
            android:id="@+id/Sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weatherSun" />

        <RadioButton
            android:id="@+id/Rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weatherRain" />

        <RadioButton
            android:id="@+id/Sand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weatherSand" />


    </RadioGroup>

    <Button
        android:id="@+id/returnMainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/returnMainButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weatherGroups" />

    <Button
        android:id="@+id/calcRangeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="35dp"
        android:text="@string/getRangeButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/returnMainButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>